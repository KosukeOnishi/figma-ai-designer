{
  "name": "figma-ai-designer",
  "version": "0.2.0",
  "description": "MCP server to create Figma components from HTML designs generated by AI",
  "main": "dist/mcp-server/index.js",
  "bin": {
    "figma-ai-designer": "./dist/mcp-server/index.js"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "build:plugin": "esbuild plugin/code.ts --bundle --outfile=dist/plugin/code.js --target=es6",
    "build:mcp": "tsc -p tsconfig.mcp.json",
    "build:all": "npm run build:plugin && npm run build:mcp",
    "watch": "tsc -p tsconfig.json --watch",
    "watch:plugin": "tsc -p tsconfig.plugin.json --watch",
    "start:mcp": "node dist/mcp-server/index.js",
    "lint": "eslint --ext .ts,.tsx --ignore-pattern node_modules .",
    "lint:fix": "eslint --ext .ts,.tsx --ignore-pattern node_modules --fix .",
    "prepublishOnly": "npm run build:all"
  },
  "keywords": [
    "figma",
    "mcp",
    "ai",
    "design",
    "html",
    "model-context-protocol"
  ],
  "author": "Kosuke Onishi",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/KosukeOnishi/figma-ai-designer.git"
  },
  "homepage": "https://github.com/KosukeOnishi/figma-ai-designer#readme",
  "bugs": {
    "url": "https://github.com/KosukeOnishi/figma-ai-designer/issues"
  },
  "files": [
    "dist/mcp-server/**/*",
    "dist/shared/**/*"
  ],
  "devDependencies": {
    "@figma/eslint-plugin-figma-plugins": "*",
    "@figma/plugin-typings": "*",
    "@types/node": "^20.10.0",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "esbuild": "^0.27.2",
    "eslint": "^8.54.0",
    "typescript": "^5.3.2"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.39.0",
    "@modelcontextprotocol/sdk": "^1.0.0",
    "css-tree": "^3.0.1",
    "node-html-parser": "^6.1.13",
    "sharp": "^0.34.5",
    "ws": "^8.18.0",
    "zod": "^3.24.0"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "root": true,
    "rules": {
      "@typescript-eslint/no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_",
          "varsIgnorePattern": "^_",
          "caughtErrorsIgnorePattern": "^_"
        }
      ]
    },
    "ignorePatterns": [
      "dist/**/*"
    ]
  }
}
